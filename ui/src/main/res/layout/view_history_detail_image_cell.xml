<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="300dp">
    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_marginBottom="40dip"
            android:clipToPadding="false"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <me.relex.circleindicator.CircleIndicator
            android:id="@+id/pageControl"
            android:layout_width="match_parent" android:layout_height="48dip"
            android:layout_gravity="center_horizontal|bottom" android:layout_marginBottom="20dip"
            app:ci_drawable="@drawable/page_selected_drawable"
            app:ci_drawable_unselected="@drawable/page_not_seelected_drawable"/>
</FrameLayout>